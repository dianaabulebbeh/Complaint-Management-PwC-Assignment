<html>
    <head>
        <title>ABC Companiy Login </title>
    
        <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
        <script type="text/javascript" src="/javascripts/actions.js" ></script>
        <link href="/style/complaintPopup.css" rel="stylesheet" type="text/css">

    </head>
    
    <header>
        <title>Login</title>
    </header>


    
    <body>

<h1>Admin Dashboard</h1>

<button type="button" class="signoutbtn"  onclick="signOut()">Sign out</button>

<%if( result.length <= 0){%>
    <div class="No Complaints">
        No Complaints
    </div>
    <% } else { %>

<table class="complaintsTable">
    <tr>
      <th>Complaint Message</th>
      <th>Status</th>

    </tr>
   
    <% for(var i=0; i < result.length; i++) { %>
        <tr>
          <td><%= result[i].message %></td>
          <td>
            <select name="dropdownID" id="<%=result[i].id%>" class="dropdownID">
                <option value="pending">pending</option>
                <option value="resolved">resolved</option>
                <option value="dismissed">dismissed</option>
              </select>
              <script>
                var sel = document.getElementById('<%=result[i].id%>');
                    var opts = sel.options;
                    for (var opt, j = 0; opt = opts[j]; j++) {
                        if (opt.value == "<%=result[i].status%>") {
                        sel.selectedIndex = j;
                        break;
                        }
                    }               
                </script>
        </td>
        </tr> 
     <% } %>
     <tr  id="AddNewComplaint"> </tr>
    </table>
    <button type="button"  onclick="updateComplaintStatus()" class="savebtn">Save</button>
       <%}%>   
       

    </body>